<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_button"
            android:paddingVertical="@dimen/_5sdp">

            <ImageView
                android:id="@+id/backIV"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/ic_baseline_arrow_back_24"></ImageView>

            <TextView
                style="@style/textStyle"
                android:layout_centerInParent="true"
                android:text="Detail Status"
                android:textSize="@dimen/_20sdp"></TextView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textStyleSmall"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:text="18 March 2021"></TextView>


                    <TextView
                        android:id="@+id/tasknameTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Android Developer"
                        android:textColor="#000"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"></TextView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:text="Description:-"
                            android:textColor="#000"
                            android:textSize="@dimen/_13sdp"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:text="Complete"
                            android:textColor="#4CAF50"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold"></TextView>

                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_margin="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:text="An Android developer is responsible for developing applications for devices powered by the Android operating system."
                            android:textColor="#000"
                            android:textSize="@dimen/_13sdp"></TextView>


                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <!--                        <TextView-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:layout_marginLeft="@dimen/_10sdp"-->
                        <!--                            android:text="Description:-"-->
                        <!--                            android:textColor="#000"-->
                        <!--                            android:textSize="@dimen/_13sdp"></TextView>-->

                        <TextView
                            android:id="@+id/imguploadTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:text="Image Upload"
                            android:textColor="#2196F3"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold"></TextView>

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150sdp">


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_10sdp">

                            <ImageView
                                android:id="@+id/showIV"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_1sdp"
                                android:scaleType="fitXY"
                                android:src="@drawable/dummy_image"></ImageView>

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_margin="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:text="An Android developer is responsible for developing applications for devices powered by the Android operating system."
                            android:textColor="#000"
                            android:textSize="@dimen/_13sdp"></TextView>


                    </androidx.cardview.widget.CardView>


                    <RelativeLayout
                        android:id="@+id/saveRL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_70sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/rectangle_button"
                        android:paddingVertical="@dimen/_5sdp">

                        <TextView
                            style="@style/textStyle"
                            android:layout_centerInParent="true"
                            android:paddingVertical="@dimen/_5sdp"
                            android:text="Save"
                            android:textAllCaps="true"></TextView>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"></RelativeLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>
</layout>